<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" type="image/png" href="/var/www/html/find3/server/main/static/img/logo.jpg" sizes="32x32">

    <title>WiFi System - Login</title>

    <!-- Bootstrap core CSS -->
    <link href="/var/www/html/find3/server/main/static/css/bootstrap4.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="/var/www/html/find3/server/main/static/css/floating-labels.css" rel="stylesheet">
</head>

<body>
    <form class="form-signin" method="post" action="/">
        <div class="text-center mb-4">
            <img class="mb-4" src="/var/www/html/find3/server/main/static/img/logo.jpg" alt="" width="180">
            <h1 class="h3 mb-3 font-weight-normal">Please login to control panel</h1>
            <p>Please insert your identification to proceed</p>
            {{ with .Message }}
            <div class="alert alert-info">
                {{.}}
            </div>
            {{ end}}
        </div>

        <div class="form-label-group">
            <input type="text" id="inputFamily" name="inputFamily" class="form-control" placeholder="Email address" required autofocus>
            <label for="inputFamily">Identification</label>
        </div>

        <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
        <p class="mt-5 mb-3 text-muted text-center">&copy; 2018</p>
    </form>
</body>

</html>
